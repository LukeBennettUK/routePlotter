<!DOCTYPE html>
<html>
	<head>
		<title>Authentication</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	</head>
	<body>
		<div id="container">
			<div id="user_header">
			<% if current_user %>
				<span class="user-login">Logged in as <%= current_user.email %>.</span>
				<%= link_to "Log Out", logout_path, :class => 'standard-link' %> |
				<%= link_to "Home", root_path, :class => 'standard-link' %>
				<%= link_to "Profile", profile_page_path, :class => 'standard-link' %>
			<% else %>
				<%= link_to "Sign Up", signup_path %> or
				<%= link_to "Log In", login_path, :class => 'standard-link' %>
			<% end %>
			</div>

			<div class="flash-container">
				<% flash.each do |name, msg| %>
					<%= content_tag :div, msg, id: "flash_#{name}"%>
				<% end %>
			</div>

			<%= yield %>
		</div>

		<%#= javascript_include_tag '/custom' %>
  </body>
</html>
